@model Models.EF.tblDIEMDEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header
{
    Tạo điểm đến
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập đầy đủ thông tin tin tức
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Create", "DiemDen", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            <fieldset>        
                                <div class="form-group">
                                    @Html.LabelFor(model => model.diemden)
                                    @Html.TextBoxFor(model => model.diemden, new { @class = "form-control" })
                                </div>                
                   
                                   
                                <div class="form-group">
                                    @Html.LabelFor(model => model.loaitour)
                                    @Html.DropDownListFor(model => model.loaitour, new SelectList(
                                    new[]
                                    {
                                        new { Value = "Trong nước", Text = "Trong nước" },
                                        new { Value = "Quốc tế", Text = "Quốc tế" },
                                    },
                                    "Value",
                                    "Text",
                                    Model
                                 ), new { @class = "form-control" })
                                </div>
                               <p><button type="submit" class="btn btn-info">Thêm mới</button></p>
                            </fieldset>
                        }
                        </div></div></div></div></div></div>

