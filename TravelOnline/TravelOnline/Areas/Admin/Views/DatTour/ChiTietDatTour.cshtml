@{
    ViewBag.Title = "ChiTietDatTour";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var tourdangxuly = (Models.ViewModel.DatTourViewModel)ViewBag.TourChuaThanhToan;
}

@section header
{
    Thông tin đặt tour
}
@{
    if(Session["Error"]!=null)
    {
        <div class="alert alert-danger">
          <strong>Lỗi!</strong> Số chỗ trống của tour đã hết .
        </div>
        Session["Error"]= null;
    }
}
<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Tên tour</th>
                    <th colspan="2">@tourdangxuly.tentour</th>
                    <th>Ngày đặt</th>
                    <th>@tourdangxuly.ngaydattour.ToString("dd-MM-yyyy")</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td width="150px">Ngày khởi hành</td>
                    <td>@tourdangxuly.ngaykhoihanh.ToString("dd-MM-yyyy")</td>
                    <td>Ngày kết thúc</td>
                    <td>@tourdangxuly.ngayketthuc.ToString("dd-MM-yyyy")</td>

                </tr>
                <tr>
                    <td width="150px">Số người lớn</td>
                    <td>@tourdangxuly.songuoilon</td>
                    <td>Số trẻ em</td>
                    <td>@tourdangxuly.sotreem</td>
                </tr>
                <tr>
                    <td width="150px">Tổng tiền</td>
                    <td>@tourdangxuly.tongtien</td>
                    <td>Tình trạng</td>
                    <td><p style="color:#ff0000">Đang xử lý</p></td>
                </tr>
            </tbody>

        </table>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th colspan="3">Thông tin người đại diện</th>

                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td width="150px">Họ tên</td>
                        <td>@tourdangxuly.hoten</td>
                        <td>Số CMT</td>
                        <td>@tourdangxuly.cmt</td>

                    </tr>
                    <tr>
                        <td width="150px">Địa chỉ</td>
                        <td>@tourdangxuly.diachi</td>
                        <td>Email</td>
                        <td>@tourdangxuly.email</td>
                    </tr>
                    <tr>
                        <td width="150px">Số điện thoại</td>
                        <td>@tourdangxuly.dienthoai</td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
            <center><a href="/Admin/DatTour/XacNhanThanhToan/@tourdangxuly.madattour" class="btn btn-info">Xác nhận thanh toán</a> <a href="/Admin/DatTour/HuyTour/@tourdangxuly.madattour" class="btn btn-info" onclick="return confirm('Bạn có muốn hủy tour ?');">Hủy tour</a> </center>
            </div>
            </div>
