@model List<Models.ViewModel.DatTourViewModel>
@{
    ViewBag.Title = "DanhSachTourDaDat";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var tour = (TravelOnline.Models.TourViewModel)ViewBag.Tour;
}

@section header
{
    @tour.tentour
}
<div style="margin-left:20px">
    <p>- Số chỗ còn : @tour.socho chỗ</p>
    <p>- Ngày khởi hành : @tour.khoihanh.ToString("dd-MM-yyyy")</p>
    <p>- Ngày kết thúc : @tour.ketthuc.ToString("dd-MM-yyyy")</p>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách các khách hàng đặt tour
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên khách hàng</th>
                                <th>Điện thoại</th>
                                <th>Số người lớn</th>
                                <th>Số trẻ em</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><b>@item.hoten</b></td>

                                    <td>@item.dienthoai</td>
                                    <td>@item.songuoilon</td>
                                    <td>@item.sotreem</td>
                                    <td>@item.tongtien</td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
