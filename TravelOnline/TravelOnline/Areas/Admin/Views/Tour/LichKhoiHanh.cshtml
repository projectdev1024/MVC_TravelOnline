@{
    ViewBag.Title = "LichKhoiHanh";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Models.EF.tblTOUR>

@section header
{
    Danh sách các tour sắp khởi hành
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách 10 tour sắp khởi hành
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Tên tour</th>
                                <th>Thời gian</th>
                                <th>Ngày bắt đầu</th>
                                <th>Ngày kết thúc</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><b>@item.tentour</b></td>
                                  
                                    <td>@item.thoigian</td>
                                    <td>@item.khoihanh.ToString("dd-MM-yyyy")</td>
                                    <td>@item.ketthuc.ToString("dd-MM-yyyy")</td>
                                    <td width="100px"><a href="/Admin/DatTour/DanhSachTourDaDat/@item.matour">Xem chi tiết</a></td>
                                    
                                </tr>
                            }

                        </tbody>
                        </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>