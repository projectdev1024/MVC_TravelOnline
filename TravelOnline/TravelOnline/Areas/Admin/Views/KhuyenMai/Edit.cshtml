@model Models.EF.tblKHUYENMAI
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header
{
    Sửa khuyến mại
}
@section jsFooter
{
    <script>
        $(function () {
            $(".jqueryui-marker-datepicker").datepicker({
                dateFormat: "yy-mm-dd",
                changeYear: true,
                showOn: "button"
            }).css("display", "inline-block")
            .next("button").button({
                icons: { primary: "ui-icon-calendar" },
                label: "Select a date",
                text: false
            });
        })
    </script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chọn tour khuyến mại
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Edit", "KhuyenMai", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                             @Html.HiddenFor(model => model.matourkm)

                            <fieldset>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.matour)
                                    @Html.DropDownListFor(model => model.matour, null, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.giam)
                                    @Html.TextBoxFor(model => model.giam, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <p> @Html.LabelFor(model => model.batdau) </p>
                                    @Html.TextBoxFor(model => model.batdau,"{0:yyyy-MM-dd}", new { @class = "textbox jqueryui-marker-datepicker" })
                                </div>

                                <div class="form-group">
                                    <p> @Html.LabelFor(model => model.kethuc) </p>
                                    @Html.TextBoxFor(model => model.kethuc,"{0:yyyy-MM-dd}", new { @class = "textbox jqueryui-marker-datepicker" })
                                </div>

                                <p>
                                    <button type="submit" class="btn btn-info">Sửa khuyến mại</button>

                                </p>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

